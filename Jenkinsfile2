pipeline {
    agent any

    environment {
        COULOIR = '031' // Changez cette valeur pour chaque couloir (A, B, C)
    }

    stages {
        stage('Couloir ${COULOIR} - Tests') {
            steps {
                echo " Déploiement dans le couloir spécifié**** ${COULOIR}****"
              echo "Exécution des tests"
            }
        }
    }

    post {
        failure
        {
            echo "Échec dans le couloir ${COULOIR}. Veuillez vérifier les rapports et logs."
        }
        success
        {
            echo "Les tests ont réussi dans le couloir ${COULOIR}. La construction est prête pour la validation manuelle."
        }
    }
 }

