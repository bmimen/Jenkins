            steps {
                script {
                    echo "Exécution de l'étape de tests communs"
                    // Ajouter des étapes spécifiques au couloir A ici si nécessaire
                }
            }
        }

 
            switch(COULOIR) {
                case 'A':
                    stage('Etapes spécifiques pour A') {
                        steps {
                            script {
                                echo "Exécution des étapes spécifiques pour le couloir A"
                                // Ajouter des étapes spécifiques au couloir A ici si nécessaire
                            }
                        }
                    }
                    break
                case 'B':
